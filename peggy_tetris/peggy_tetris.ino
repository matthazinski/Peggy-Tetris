    peggyFrame.Peggy_Clear();
    setFrameFromBoard(titleScreen);
    pinMode(buttonPinLeft, INPUT);
    pinMode(buttonPinRight, INPUT);
    pinMode(buttonPinRotate, INPUT);
    buttonLeft = 0;
    buttonRight = 0;
    buttonRotate = 0;
}


